// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  email        String   @unique
  username     String   @unique
  googleId     String   @id
  gamesplayed  Int      @default(0)
  wins         Int      @default(0)
  color String @default("495867")
  lobbyId      String?
  lobby        Lobby?   @relation(fields: [lobbyId], references: [id])
  indexInLobby Int?
  readyState   Boolean? @default(false)
  hexes        Hex[]
}

model Lobby {
  id            String     @id @default(uuid())
  playerCount   Int        @default(1)
  players       User[]
  lobbyState    LobbyState @default(PREPARATION)
  currentPlayer Int        @default(0)
  Map           Map?
}

enum LobbyState {
  PREPARATION
  IN_PROGRESS
  FINISHED
}

model Map {
  lobbyId String @id
  lobby   Lobby  @relation(fields: [lobbyId], references: [id])
  hexes   Hex[]
}

model Hex {
  x            Int
  y            Int
  mapId        String?
  villageLevel Int?
  hp           Int?
  hasArmy      Boolean
  map          Map?    @relation(fields: [mapId], references: [lobbyId])
  userGoogleId String?
  User         User?   @relation(fields: [userGoogleId], references: [googleId])

  @@id([x, y])
}

enum HexType {
  HEX
  VILLAGE
  CAMP
  TOWER
  CASTLE
  FOREST
  MOUNTAIN
}

enum Action {
  BUILDCAMP
  BUILDTOWER
  BUILDCASTLE
  TRAINARMY
  MOVEARMY
}
