// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  email        String   @unique
  username     String   @unique
  googleId     String   @id
  profileUrl   String   @default("https://cdn-icons-png.flaticon.com/128/3135/3135715.png")
  gamesplayed  Int      @default(0)
  wins         Int      @default(0)
  color        String   @default("495867")
  lobbyId      String?
  lobby        Lobby?   @relation(fields: [lobbyId], references: [id])
  indexInLobby Int?
  readyState   Boolean? @default(false)
}

model Lobby {
  id            String     @id @default(uuid())
  playerCount   Int        @default(1)
  players       User[]
  lobbyState    LobbyState @default(PREPARATION)
  currentPlayer Int        @default(0)
  actions       Action[]
}

enum LobbyState {
  PREPARATION
  IN_PROGRESS
  FINISHED
}

model Action {
  number       Int        @id @default(autoincrement())
  x            Int
  y            Int
  destX Int
  destY Int
  type   ActionType
  Lobby        Lobby     @relation(fields: [lobbyId], references: [id])
  lobbyId      String
}

enum HexType {
  HEX
  VILLAGE
  CAMP
  TOWER
  CASTLE
  FOREST
  MOUNTAIN
}

enum ActionType {
  BUILDCAMP
  BUILDTOWER
  BUILDCASTLE
  TRAINARMY
  MOVEARMY
}
